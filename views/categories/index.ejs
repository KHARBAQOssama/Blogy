<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Category.css"> 
</head>

<body>

    <div class="title">
        <h1 class="">Categories</h1>
    </div>

    <div class="container">



      <div id="table-category" >

     
        <table  class="table align-middle mb-0 bg-white">
            <thead class="bg-light" id="head">
              <tr>
                <th>Name</th>
             
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>

                
                <% categories.forEach(category => { %>
              <tr>

                
                <td>
                  <div class="d-flex align-items-center">
                    

                    <!-- <img
                        src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"
                        /> -->
                    <div class="ms-3 d-flex flex-row ">
                        
                        <div>


                                <div>
                                    <%= category.name %>
                                </div>
                           
                                
                               
                      
                        </div>
                      
                      <!-- <p class="fw-bold mb-1">John Doe</p> -->
                 
                    </div>
                  </div>
                </td>


                <td class="row">
                    <div class="col">
                        <a id="button-edit"  href="/categories/<%= category.id %>/edit">Edit</a>
                       
                    </div>
                    <div class="col">
                        <form action="/categories/<%= category.id %>/delete" method="post">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
                            <button id="button-delete" >Delete</button>
        
                        </form>

                    </div>
                   
                </td>
          
          
              </tr>
              <% }); %>
             
            
            </tbody>
          </table>

        </div>
     
      
           
         

    </div>
   
    <!-- <a href="/categories">Back to Categories</a> -->
</body>

</html>
