<div class="row mt-5 mb-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include ("./partials/messages"); %>
            <form action="/profile/edit" method="POST" enctype="multipart/form-data">
                <fieldset>
                    <div class="form-group">
                        <label class="col-form-label mt-4" for="name_input">Full name</label>
                        <input type="text" class="form-control" name="name" placeholder="Full name" id="name_input" value="<%= user.full_name %>">
                    </div>
                    <div class="form-group">
                        <label for="email_input" class="form-label mt-4">Email address</label>
                        <input type="email" class="form-control" name="email" id="email_input" aria-describedby="emailHelp" placeholder="Enter email" value="<%= user.email %>">
                    </div>
                    <div class="form-group mt-2">
                        <div class="d-block">
                            <img src="<%= imageUrl %>" alt="Profile Image" />
                            <p class="m-0"><%= user.image?.split('.')[0] %></p>
                        </div>
                        <label for="formFile" class="form-label mt-2">Upload an Image</label>
                        <input class="form-control mt-2" type="file" id="formFile" name="profileImage" placeholder="get-image">
                    </div>
                    <fieldset class="form-group mt-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="isAuthor" id="check_inbox" name="isAuthor" <% if (user.isAuthor) { %>checked<% } %>>
                            <label class="form-check-label" for="check_inbox">Default switch checkbox input</label>
                        </div>
                    </fieldset>
                    <button type="submit" class="btn btn-primary mt-3">Update</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>