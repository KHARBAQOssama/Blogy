<div class="row mt-5 mb-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register User
            </h1>
            <%- include ("./partials/messages"); %>
            <form action="/auth/register" method="POST">
                <fieldset>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label mt-4" for="name_input">Full name</label>
                        <input type="text" class="form-control" name="name" placeholder="Default input" id="name_input" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="email_input" class="form-label mt-4">Email address</label>
                        <input type="email" class="form-control" name="email" id="email_input" aria-describedby="emailHelp" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="password_input" class="form-label mt-4">Password</label>
                        <input type="password" class="form-control" name="password" id="password_input" placeholder="Password" autocomplete="off" value="<%= typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="passwordC_input" class="form-label mt-4">Confirm Password</label>
                        <input type="password" class="form-control" name="password_confirmed" id="passwordC_input" placeholder="Password" autocomplete="off" value="<%= typeof password_confirmed != 'undefined' ? password_confirmed : '' %>">
                    </div>
                    <fieldset class="form-group mt-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="isAuthor" id="check_inbox" value="true">
                            <label class="form-check-label" for="check_inbox">Default switch checkbox input</label>
                        </div>
                    </fieldset>
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </fieldset>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/auth/login">Login</a></p>
        </div>
    </div>
</div>